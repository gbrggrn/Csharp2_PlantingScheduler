<Window x:Class="Csharp2_PlantingScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Csharp2_PlantingScheduler"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" x:Name="mnuFile" Height="20" Width="75" HorizontalAlignment="Left" VerticalAlignment="Center">
            <MenuItem Header="_File" Margin="20,0,0,0" FontSize="14" FontFamily="Calibri">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open">
                    <MenuItem Header="_Text File"/>
                    <MenuItem Header="_Json"/>
                </MenuItem>
                <MenuItem Header="_Save"/>
                <MenuItem Header="_Save as">
                    <MenuItem Header="_Text File"/>
                    <MenuItem Header="_Json"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_XML">
                    <MenuItem Header="_Save food items"/>
                    <MenuItem Header="_Open food items"/>
                </MenuItem>
                <MenuItem Header="_Exit"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Input controls -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" x:Name="addGardenBtn" Content="Add Garden" Margin="10"/>
                <Button Grid.Row="1" x:Name="addPlantBtn" Content="Add Plant" Margin="10"/>
                <Button Grid.Row="2" x:Name="editBtn" Content="Edit" Margin="10"/>
                <Button Grid.Row="3" x:Name="deleteBtn" Content="Delete" Margin="10"/>
                <Button Grid.Row="4" x:Name="generateBtn" Content="Generate Schedule" Margin="10" Click="generateBtn_Click"/>
            </Grid>

            <!-- Garden Listview -->
            <ListView Grid.Column="1" Margin="10"
                      x:Name="gardenLstView"
                      ItemsSource="{Binding GardensPlantsObserver}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Gardens" Width="125" DisplayMemberBinding="{Binding Gardens.Name}"/>
                        <GridViewColumn Header="Zone" Width="100" DisplayMemberBinding="{Binding Gardens.Zone}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Plants ListView -->
            <ListView Grid.Column="2" Margin="10"
                    x:Name="plantsLstView"
                    ItemsSource="{Binding GardensPlantsObserver}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Plants" Width="125" DisplayMemberBinding="{Binding Plants.Name}"/>
                        <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding Plants.Type}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        
        <!-- Schedule Display -->
        <ScrollViewer Grid.Row="2" Margin="10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid x:Name="ScheduleGrid"/>
            <!-- Content added programmatically -->
        </ScrollViewer>

    </Grid>
</Window>
